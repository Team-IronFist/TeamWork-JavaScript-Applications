<h1>Add new comment</h1>

<div class="form-group">
  <label for="post-title">{{this.Title}}</label>
  <input id="post-title" class="form-control">
</div>
<div class="form-group">
  <label for="comment-content">Description: </label>
  <textarea id="comment-content" class="form-control" rows="8" cols="40"></textarea>
</div>
<input type="button" id="btn-comment-add" class="btn btn-success" value="Add comment">
