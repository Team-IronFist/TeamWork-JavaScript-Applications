<form id="add-car">
    <h1>Add car</h1>
    <div class="form-group">
        <label for="tb-make">make: </label>
        <input id="tb-make" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-model">model: </label>
        <input id="tb-model" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-year">year: </label>
        <input id="tb-year" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-horsePowers">horse powers: </label>
        <input id="tb-horsePowers" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-engine">engine: </label>
        <input id="tb-engine" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-extras">extras: </label>
        <input id="tb-extras" class="form-control">
    </div>
    <div class="form-group">
        <label for="tb-comments">comments: </label>
        <input id="tb-comments" class="form-control">
    </div>
    <input type="submit" id="btn-add-car" class="btn btn-success">
</form>
